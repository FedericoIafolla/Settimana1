package Esercizio2;

import java.util.Scanner;

public class NumeroInLettere {
    public static void main(Scanner scanner) {
        int numero;
        boolean validInput = false;

        do {
            System.out.print("Inserisci un numero intero (0-3): ");
            if (scanner.hasNextInt()) {
                numero = scanner.nextInt();
                scanner.nextLine(); // Consuma il newline
                switch (numero) {
                    case 0:
                        System.out.println("Zero");
                        validInput = true;
                        break;
                    case 1:
                        System.out.println("Uno");
                        validInput = true;
                        break;
                    case 2:
                        System.out.println("Due");
                        validInput = true;
                        break;
                    case 3:
                        System.out.println("Tre");
                        validInput = true;
                        break;
                    default:
                        System.out.println("Errore: numero non valido. Riprova.");
                        validInput = false;
                        break;
                }
            } else {
                System.out.println("Errore: input non valido. Riprova.");
                scanner.nextLine(); // Consuma l'input non valido
            }
        } while (!validInput);
    }
}
