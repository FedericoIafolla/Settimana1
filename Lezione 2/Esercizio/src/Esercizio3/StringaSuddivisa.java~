package Esercizio3;

import java.util.Scanner;

public class StringaSuddivisa {
    public static void suddividiStringa(Scanner scanner) {
        String input;

        do {
            System.out.print("Inserisci una stringa (o ':q' per uscire): ");
            input = scanner.nextLine();

            if (!input.equals(":q")) {
                // Suddivide la stringa in caratteri e li stampa separati da virgola
                String[] caratteri = input.split("");
                System.out.println(String.join(", ", caratteri));
            }

        } while (!input.equals(":q"));
    }
}
